<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E_Commerce_B_W2_Project</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E_Commerce_B_W2_Project.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="mb-4">
        <nav class="navbar navbar-expand-lg bg-custom flex-column">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Epizone" asp-action="Index">
                    <img src="img/logo.png" alt="Logo" width="100"
                         class="d-inline-block align-text-top">
                </a>
                <a class="nav-link" asp-controller="Epizone" asp-action="Add">Aggiungi Prodotto</a>
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg bg-nav">
            <div class="container-fluid ">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list text-white"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link py-0" aria-current="Home" asp-controller="Epizone" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-0" aria-current="Buoni Regalo">Buoni Regalo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-0" aria-current="Supermercato">Supermercato</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-0 " aria-current="Offerte">Offerte</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-0" aria-current="Amazon Basic">Amazon Basic</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-0" aria-current="Acquista di nuovo">Acquista di nuovo</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link py-0" aria-current="Servizio Clienti">Servizio Clienti</a>
                        </li>
                    </ul>
                    <div class="d-flex gap-3">
                        <i id="cartIcon" class="bi bi-cart nav-link position-relative"
                           style="font-size: 2em; color: #ffffff">
                            <span class="position-absolute top-50 start-50 translate-middle fs-sm">
                                <span id="cartNumber">0</span>
                            </span>
                        </i>
                        <i class="bi bi-person-circle nav-link" style="font-size: 2em; color: #ffffff"></i>
                    </div>
                </div>
            </div>
        </nav>
    </header>

        <main role="main" class="pb-3 container-fluid">
            @RenderBody()
        </main>

    <footer class="border-top footer mb-3 text-muted">
        <div class="container">
            &copy; 2025 - E_Commerce_B_W2_Project - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
