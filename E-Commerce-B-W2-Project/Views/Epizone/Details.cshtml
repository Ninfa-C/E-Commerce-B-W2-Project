@model ProductBaseModel
@{
	ViewData["Title"] = "Epizone - Dettagli Prodotto";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (Model != null){

<div aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Epizone" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a href="#">Offerte</a></li>
        <li class="breadcrumb-item active" aria-current="page" id="dataPage"></li>
    </ol>

    <div id="product-Container" class="row p-5">
        <div class="container detailImg col-3 imgCont">
                <img alt="Product img prodImg" src="@Model.ImgListModel[0].ImgUrl" class="img-fluid">
        </div>
        <div class="col-7">
            <div class="border-bottom border-secondary-subtle">
                <h1 class="title fs-3">@Model.Name</h1>
                <div class="d-flex align-items-end flex-wrap my-3">
                    <div class="d-flex align-items-center stars font-sm me-2" style="color: #FFAA46">
                        <i class="bi bi-star-fill" style="font-size: 1em; color: #FFAA46;"></i>
                        <i class="bi bi-star-fill" style="font-size: 1em; color: #FFAA46;"></i>
                        <i class="bi bi-star-fill" style="font-size: 1em; color: #FFAA46;"></i>
                        <i class="bi bi-star-half" style="font-size: 1em; color: #FFAA46;"></i>
                        <i class="bi bi-star" style="font-size: 1em; color: #FFAA46;"></i>
                        &nbsp;3.5
                    </div>
                    <span class="text-body-secondary"> @Model.Comment</span>
                </div>
                <p>+@Model.Sales vendute questo mese</p>
            </div>
            <div class="border-bottom border-secondary-subtle mb-3">
                <div class="d-flex align-items-start">
                    <p class="fs-1 fw-semibold my-0 py-0 price">@Model.IntPrice</p>
                    <p class="fs-custom py-3 cents ms-1">@Model.IntCents</p>
                </div>
                <p>
                    I prezzi degli articoli in vendita su AmazonClone includono l’IVA. In base all’indirizzo
                    di
                    spedizione, l’IVA potrebbe variare durante il processo di acquisto. Per maggiori
                    informazioni <a href="javascript:void()">clicca qui.</a>
                </p>
            </div>
            <div class="">
                <h4>
                    Informazioni su questo articolo</h4>
                    <p class="">@Model.Description</p>
                    <div class="container row-cols-5 d-flex justify-content-start gap-3">
                        @for (var i = 1; i < Model.ImgListModel.Count; i++)
                        {
                            <img src="@Model.ImgListModel[i].ImgUrl" class="img-fluid">
                        }
                    </div>
            </div>
        </div>
        <div class="col-2 card h-25 pb-5">
            <div class="">
                <div class="d-flex align-items-start">
                    <p class="fs-1 fw-semibold price">@Model.IntPrice</p>
                    <p class="fs-custom py-3 cents ms-1">@Model.IntCents</p>
                </div>
                <p>
                    Consegna senza costi aggiuntivi <span class="fw-bold"> @Model.Consegna</span>. Ordina entro
                    <span class="text-success">5 min</span>.
                </p>
                <h3 class="fs-5 text-success fw-normal">Disponibilità immediata</h3>
                <button type="button" class="btn btn-warning w-100 rounded-pill fs-6 mb-2">
                    Aggiungi al carrello
                </button>
                <button type="button" class="btn btn-light w-100 rounded-pill fs-6 mb-4">
                    Rimuovi al carrello
                </button>
                <div class="fs-custom">
                    <div class="row row-cols-2 mb-0">
                        <p class="col-4 text-secondary mb-0">Spedizione</p>
                        <p class="col-8 mb-0">AmazonClone</p>
                    </div>
                    <div class="row row-cols-2">
                        <p class="col-4 text-secondary mb-0">Venditore</p>
                        <p class="col-8 mb-0">AmazonClone</p>
                    </div>
                    <div class="row row-cols-2">
                        <p class="col-4 text-secondary mb-0">Pagamento</p>
                        <a class="col-8 mb-0 link-underline link-underline-opacity-0"
                           href="javascript:void()">Transazione sicura</a>
                    </div>
                    <div class="row row-cols-2">
                        <p class="col-4 text-secondary mb-0">Servizio Clienti</p>
                        <p class="col-8 mb-0">AmazonClone</p>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

}


